# $FreeBSD: src/share/skel/dot.mailrc,v 1.6.56.1.2.1 2009/10/25 01:10:29 kensmith Exp $
#
# .mailrc - mail resources
#
# see also mail(1)
#

set append ask autoprint 
set indentprefix="> "
set PAGER=more
set EDITOR=vi
set VISUAL=vi
set folder=Mail
retain bcc cc date from subject to

# include your private mail aliases
source ~/.mail_aliases
