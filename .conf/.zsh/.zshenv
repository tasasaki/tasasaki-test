# =======================================================================================
# .zshenv
# @tasasaki
# =======================================================================================

# =======================================================================================
# setup
# =======================================================================================

export LANG=C
export LISTMAX=-1
export HOSTNAME=hostname


# =======================================================================================
# PATH
# =======================================================================================

export PATH=${PATH}:${HOME}/bin


# =======================================================================================
# load .zsh file
# =======================================================================================

[ -f ${HOME}/.conf/.zsh/.zshalias ] && source ${HOME}/.conf/.zsh/.zshalias
[ -f ${HOME}/.conf/.zsh/.zshrc ] && source ${HOME}/.conf/.zsh/.zshrc

















